<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/topic_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE YOUR EVENT"
        android:textSize="20dp"
        android:layout_marginVertical="20dp"
        android:textAlignment="center"/>


    <TableLayout
        android:id="@+id/topictable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topic_header"
        android:layout_marginVertical="10dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_camp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageButton
                android:id="@+id/btn_swim"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageButton
                android:id="@+id/btn_music"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                tools:srcCompat="@drawable/ic_launcher_foreground" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/btn_cycle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/btn_travel"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/btn_art"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"
                android:layout_margin="10dp"/></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/btn_read"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/btn_sport"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/btn_yoga"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground"
                android:layout_margin="10dp"/></TableRow>


    </TableLayout>

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Add Another Event"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/topictable"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_topic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
        android:text="save"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>